<h1>Welcome <%= @customer.firstname %></h1>
<h2>Open a Chest</h2>
<ul>
<% [10,20,30,40,50].each do |val|%>
<li><%= link_to "$#{val} Chest", :action=> :chest, :value => val %>
</li>
<% end %>
</ul>
<h2>Possible Items</h2>
  <% @target_areas.each do |ta| %>
  <h2><%=ta.name%> - <%=ta.items.size%> </h2>

  <ul>
    <% ta.items.each do |item| %> 
      <li style="display:inline-block">
        <svg
          xmlns:dc="http://purl.org/dc/elements/1.1/"
          xmlns:cc="http://creativecommons.org/ns#"
          xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
          xmlns:svg="http://www.w3.org/2000/svg"
          xmlns="http://www.w3.org/2000/svg"
          version="1.1"
          width="150"
          height="150"
          id="svg2985"
          xml:space="preserve"><metadata
          id="metadata2991"><rdf:RDF><cc:Work
          rdf:about=""><dc:format>image/svg+xml</dc:format><dc:type
           rdf:resource="http://purl.org/dc/dcmitype/StillImage" /><dc:title></dc:title></cc:Work></rdf:RDF></metadata><defs
         id="defs2989"><clipPath
         id="clipPath2999"><path
         d="M 0,792 612,792 612,0 0,0 0,792 z"
         id="path3001" /></clipPath></defs>
          <%= render item.avatar if item.avatar%>
          <%= render item if item.avatar %>
        </svg>
      </li>
    <%end%>
  </ul>
<%end%>