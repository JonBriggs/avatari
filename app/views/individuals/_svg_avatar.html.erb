<% avatari_svg do %>
  <%= render @individual.avatar if @individual.avatar %>
  <% @individual.worn_items.each do |witem| %>
    <%= render witem %>
  <% end %>
<% end %>

<script>
  <%@individual.worn_items.each do |worn_item|%>
    <% if worn_item.color? %>
      <%color_code, action, color = worn_item.color.split(":")%>
      d3.selectAll("#g_owned_item_<%=worn_item.id%> path.<%=color_code%>").transition().duration(2000).style("<%=action%>", "<%=color%>");
    <%end%>
  <%end%>
</script>